<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edit Config" Width="600" Height="400" WindowStartupLocation="CenterOwner"
        x:Class="MonkeModManager.ConfigEditorDialog">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        
        <ScrollViewer Grid.Row="0">
            <StackPanel x:Name="SettingsPanel" Spacing="5" />
        </ScrollViewer>
        
        <Button Grid.Row="1" Content="Save Changes" HorizontalAlignment="Right" 
                Width="120" Margin="0,10,0,0" Click="Save_Click"
                Background="#3F51B5"
                Foreground="White"/>
    </Grid>
</Window>